  "ComponentsSettings": {
    "ContentMetadataServiceApiSettings": {
      "ContentMetadataServiceUrl": "https://localhost:5011"
    },
    "KeyServiceClientSettings": {
      "KeyServiceUrl": "https://localhost:7041"
    }
  }
}
