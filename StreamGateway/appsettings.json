{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CorsSettings": {
    "AllowedHosts": [ "*" ],
    "AllowedHeaders": [ "*" ],
    "AllowedMethods": [ "*" ]
  },
  "UseSwagger": true,
  "KestrelSettings": {
    "ListeningIPv4Address": "127.0.0.1",
